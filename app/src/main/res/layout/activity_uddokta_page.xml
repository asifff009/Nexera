<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".UddoktaPage">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Horizontal Image Slider -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="60dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_image_bg"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uc4" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_margin="10dp"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uc1"
                    android:background="@drawable/rounded_image_bg"
                    android:clipToOutline="true" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_margin="10dp"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uc2"
                    android:background="@drawable/rounded_image_bg"
                    android:clipToOutline="true" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_margin="10dp"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uc3"
                    android:background="@drawable/rounded_image_bg"
                    android:clipToOutline="true" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Grid Items -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:padding="16dp"
            android:useDefaultMargins="true"
            android:background="#000000">

            <!-- Item 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/uc3"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_bg"
                    android:contentDescription="Pet Sitting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Sitting"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Item 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/uc3"
                    android:contentDescription="T-shirt Printing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-shirt Printing"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Item 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/uc3"
                    android:contentDescription="Online Teaching" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Teaching"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Add more items similarly -->
            <!-- Item 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/uc4"
                    android:contentDescription="Online Bookkeeping" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookkeeping"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Item 5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/uc4"
                    android:contentDescription="Consulting" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consulting"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Item 6 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/uc4"
                    android:contentDescription="Medical Courier" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medical Courier"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Item 7 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/uc1"
                    android:contentDescription="App Development" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Development"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Item 8 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_transcription"
                    android:contentDescription="Transcription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transcription"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Item 9 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_organizing"
                    android:contentDescription="Organizing" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizing"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Item 10 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_photography"
                    android:contentDescription="Photography" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photography"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Add more items as needed -->

        </GridLayout>

    </LinearLayout>
</ScrollView>
