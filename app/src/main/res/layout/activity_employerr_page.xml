<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/employee_design"
    >  <!-- Optional: dark bg for white text -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dedicated to delivering your best every day."
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="5dp"
        android:fontFamily="@font/open_sans_bold"
        />

    <!-- Banner Slider (HorizontalScrollView with CardViews) -->
    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Banner 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="140dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pic1"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <!-- Banner 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="140dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pic2"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <!-- Banner 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="140dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/joinus"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <!-- Banner 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="140dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hiring"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <!-- Banner 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="260dp"
                android:layout_height="140dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pic3"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Buttons in GridLayout 2 columns x 2 rows -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false">

        <Button
            android:id="@+id/postJobBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Post Job"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/bottom_curved"
            android:padding="10dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonSeeJob"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="See Posted Jobs"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/bottom_curved"
            android:padding="10dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonSeeApplicant"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="See Applicant"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center"
            android:fontFamily="@font/open_sans_bold"
            android:backgroundTint="#2196F3"
            android:background="@drawable/bottom_curved"
            android:padding="10dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Log out"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#000000"
            android:gravity="center"
            android:backgroundTint="#2196F3"
            android:background="@drawable/bottom_curved"
            android:padding="10dp"
            android:textStyle="bold"/>

    </GridLayout>

</LinearLayout>
