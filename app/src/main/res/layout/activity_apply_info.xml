<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    >

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/form_background"
        android:elevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply for the Job"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edInterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interest"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Experience"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Skill"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonApplyJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="16dp"
            android:padding="14dp" />



    </LinearLayout>
</ScrollView>
